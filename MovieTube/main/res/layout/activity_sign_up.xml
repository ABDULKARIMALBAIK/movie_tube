<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backround"
    tools:context=".SignUp">

    <io.supercharge.shimmerlayout.ShimmerLayout
        android:id="@+id/shimmerSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shimmer_animation_duration="1200"
        android:layout_marginTop="90dp">

        <TextView
            android:id="@+id/txtSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sign Up"
            android:textSize="60sp"
            android:textStyle="normal"
            android:textColor="@color/colorAccent" />

    </io.supercharge.shimmerlayout.ShimmerLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgPerson"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:visibility="gone"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person_yallow_24dp"
                android:layout_centerInParent="true"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="1dp"/>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="15dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/colorAccent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="20dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:src="@drawable/ic_email_yallow_24dp"
                        android:layout_margin="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:textSize="25sp"
                        android:inputType="textEmailAddress"
                        android:textAllCaps="false"
                        android:textCursorDrawable="@null"
                        android:singleLine="false"
                        android:layout_margin="4dp"
                        app:met_baseColor="@android:color/white"
                        app:met_bottomTextSize="0dp"
                        app:met_floatingLabelTextSize="0dp"
                        app:met_floatingLabel="highlight"
                        app:met_floatingLabelText=""
                        app:met_primaryColor="@android:color/white"
                        app:met_singleLineEllipsis="true"
                        app:met_hideUnderline="true"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="15dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/colorAccent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:src="@drawable/ic_person_yallow_24dp"
                        android:layout_margin="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name"
                        android:textSize="25sp"
                        android:inputType="textAutoComplete"
                        android:textAllCaps="false"
                        android:textCursorDrawable="@null"
                        android:singleLine="false"
                        android:layout_margin="4dp"
                        app:met_baseColor="@android:color/white"
                        app:met_bottomTextSize="0dp"
                        app:met_floatingLabelTextSize="0dp"
                        app:met_floatingLabel="highlight"
                        app:met_floatingLabelText=""
                        app:met_primaryColor="@android:color/white"
                        app:met_singleLineEllipsis="true"
                        app:met_hideUnderline="true"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="15dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/colorAccent"
            android:layout_margin="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:src="@drawable/ic_lock_yallow_24dp"
                        android:layout_margin="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edtPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:textSize="25sp"
                        android:inputType="textPassword"
                        android:textAllCaps="false"
                        android:textCursorDrawable="@null"
                        android:singleLine="false"
                        android:layout_margin="4dp"
                        app:met_baseColor="@android:color/white"
                        app:met_bottomTextSize="0dp"
                        app:met_floatingLabelTextSize="0dp"
                        app:met_floatingLabel="highlight"
                        app:met_floatingLabelText=""
                        app:met_primaryColor="@android:color/white"
                        app:met_singleLineEllipsis="true"
                        app:met_hideUnderline="true"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <com.sanojpunchihewa.glowbutton.GlowButton
        android:id="@+id/btnSignUp"
        android:text="Sign Up"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="normal"
        android:textSize="18sp"
        android:layout_margin="8dp"
        android:layout_alignParentBottom="true"
        app:buttonColor="@color/colorAccent"
        app:cornerRadius="14dp"
        app:glowColor="@color/colorAccent"
        app:pressedGlowSize="10dp"
        app:unpressedGlowSize="22dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.abdalkarimalbiekdev.movietube">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>


    <application
        android:allowBackup="true"
        tools:ignore="LockedOrientationActivity"
        android:icon="@mipmap/ic_start"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_start"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".StreamVideo"></activity>
        <activity android:name=".MovieDetails" android:screenOrientation="portrait"/>
        <activity android:name=".Movie" android:screenOrientation="portrait"/>
        <activity android:name=".SignUp" android:screenOrientation="portrait"/>
        <activity android:name=".SignIn" android:screenOrientation="portrait"/>
        <activity android:name=".Category" android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.abdalkarimalbiekdev.movietube.myprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />

        </provider>

    </application>

</manifest>